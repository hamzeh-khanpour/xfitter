CERES_DIR="../../../ceres/"
QCDNUM_DIR="../../../deps/qcdnum/lib/"

APFEL=`apfel-config --ldflags`
LHAPDF=`lhapdf-config --ldflags`
APFELPP=`apfelxx-config --ldflags`
APPELCPP=`apfelxx-config --cppflags`
LHAPDFpp=`lhapdf-config --cppflags`

g++ -c -std=c++11 -I${CERES_DIR}/include/  -I/usr/include/eigen3 -I../include/ -I../evolutions/APFELxx/include \
    -I../evolutions/BaseEvolution/include -I../pdfdecompositions/BasePdfDecomposition/include/ \
    -I../pdfdecompositions/LHAPDFDecomposition/include/  -I../pdfdecompositions/BasePdfDecomposition/include/ -I../pdfparams/BasePdfParam/include -I/home/glazov/fitdir/deps/yaml-cpp/include \
    $APPELCPP $LHAPDFpp hello_xfitter.cc

/usr/bin/c++    -fopenmp -Wno-unknown-pragmas -Wno-sign-compare -Wno-unused-parameter -Wno-missing-field-initializers -O3 -DNDEBUG    hello_xfitter.o  -o ./hello_xfitter -rdynamic -L${CERES_DIR}/lib  -L${QCDNUM_DIR} -L../lib/ -lceres -lxfmain -lbasepdfdecomposition_xfitter -lbaseevolution_xfitter -lapfelxx_xfitter -lmyrt -lpdferrors -lxffnlo -lQCDNUM -lQEDevol -lQCDNUM -lmyminuit -lgenetic -linterfaces -lHFcommon -lnum_utils -lgfortran -lglog -lgflags -lpthread -lspqr -lcholmod -lccolamd -lcamd -lcolamd -lamd -llapack -lblas -lsuitesparseconfig -lrt -lcxsparse -lgomp -lpthread -lspqr -lcholmod -lccolamd -lcamd -lcolamd -lamd -llapack -lblas -lsuitesparseconfig -lrt -lcxsparse -lgomp  -lmyew -lmyfonll $APFEL $LHAPDF -lmyfonll ${APFELPP} -lbasepdfdecomposition_xfitter -llhapdfdecomposition_xfitter

